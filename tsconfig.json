{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ]
    },
    "include": [
        "core/**/*"
    ],
    "exclude": [
        "node_modules",
        "samples"
    ]
}